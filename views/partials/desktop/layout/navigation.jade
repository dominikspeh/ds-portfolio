
aside.navigation

    i.fa.fa-bars.nav(ng-click="showNavigation = !showNavigation; showMobileNav = false", ng-class="{'active':showNavigation}")
    i.fa.fa-angle-left.back(ng-if="!isActive('/')", ng-click="historyBack()")


    .current(ng-controller="PcProjectDetailsCtrl")
        span.currentPage {{$route.current.title || project.name}}

        // ABOUT
        span(data-toggle='tooltip', data-placement='left', title='About')
            i.fa.fa-male.active(ng-if="isActive('/ds/about')", ng-click="moveTo(1)")
        span(data-toggle='tooltip', data-placement='left', title='Skills')
            i.fa.fa-cogs(ng-if="isActive('/ds/about')", ng-click="moveTo(2)")
        span(data-toggle='tooltip', data-placement='left', title='Vita')
            i.fa.fa-list-ol(ng-if="isActive('/ds/about')", ng-click="moveTo(3)")
        span(data-toggle='tooltip', data-placement='left', title='Certificates')
            i.fa.fa-certificate(ng-if="isActive('/ds/about')", ng-click="moveTo(4)")

        // Projects
        span(data-toggle='tooltip', data-placement='left', title='Filter')
            i.fa.fa-filter(ng-if="isActive('/ds/projects')")




    i.fa.mobile.fa-mobile-phone(ng-click="showMobileNav = !showMobileNav ; showNavigation = false", ng-class="{'active':showMobileNav}")

.naviContainer.fade(ng-show="showNavigation")
    .row.justify-content-center.align-items-center.align-content-center
        ul
            li
                a(href="#", ng-class="{ active: isActive('/')}", ng-click="goToHome()") Home
            li
                a(href="#", ng-class="{ active: isActive('/ds/about')}", ng-click="goToAbout()") About me

            li
                a(href="#", ng-class="{ active: isActive('/ds/projects')}", ng-click="goToProjects()") Projects

            li
                a(href="#") Blog
            li
                a(href="#") Contact
    .imprint
        ul
            li
                a(href="#") Impressum
            li
                a(href="#") Datenschutz



.mobileContainer.fade(ng-show="showMobileNav", ng-controller="PcCodeCtrl")

    .row.align-items-center.justify-content-around.align-content-center
        .col-12.col-md-auto
            img(src='https://chart.googleapis.com/chart?cht=qr&chl=http%3A%2F%2F{{host}}{{code}}%2F&chs=150x150&choe=UTF-8&chld=L|2')

        .col
            p {{ code1 }} {{ code2 }} {{ code3 }} {{ code4 }}


script.

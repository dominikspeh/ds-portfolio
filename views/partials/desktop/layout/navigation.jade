            li
                a(href="#", ng-class="{ active: isActive('/ds/projects')}", ng-click="goToProjects()") Projects

            //li
                a(href="#") Blog
            li
                a(href="#",ng-click="goToContact()") Contact
    .imprint
        ul
            li
                a(href="/ds/imprint") Imprint
            li
                a(href="/ds/privacy") Privacy



.mobileContainer.fade.dark(ng-show="showMobileNav", ng-controller="PcCodeCtrl")

